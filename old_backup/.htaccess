<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    RewriteRule ^index\.html* - [L]
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule . /index.html [L]
</IfModule>

#Redirect WWW to non-WWW
RewriteEngine On
RewriteCond %{HTTP_HOST} ^www.vonkprogramming.nl [NC]
RewriteRule ^(.*)$ https://vonkprogramming.nl/$1 [L,R=301]